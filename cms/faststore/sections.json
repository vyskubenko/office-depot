[
  {
    "name": "CustomHeader",
    "schema": {
      "title": "Custom Header",
      "description": "CustomHeader Wrapper",
      "type": "object",
			"required": [
				"logoLink"
			],
      "properties": {
        "logoLink": {
          "title": "Link Path",
          "type": "object",
          "properties": {
            "text": {
              "title": "Text",
              "type": "string"
            },
            "url": {
              "title": "URL",
              "type": "string"
            }
          }
        },
				"logo": {
          "title": "Logo",
          "type": "object",
          "required": ["src"],
          "properties": {
            "src": {
              "title": "Image",
              "type": "string",
              "widget": {
                "ui:widget": "media-gallery"
              }
            },
            "alt": {
              "title": "Alternative Label",
              "type": "string"
            },
            "link": {
              "title": "Logo Link",
              "type": "object",
              "required": ["url", "title"],
              "properties": {
                "url": {
                  "title": "Link URL",
                  "type": "string"
                },
                "title": {
                  "title": "Link Title",
                  "type": "string"
                }
              }
            }
          }
        },
        "region": {
          "title": "Regionalizaton",
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "title": "Use Regionalization?",
              "default": true
            }
          }
        },
        "navButtons": {
          "title": "navButtons Item List",
          "type": "array",
          "items": {
            "title": "navButtons Item",
            "type": "object",
            "properties": {
              "title": {
                "title": "Text",
                "type": "string"
              },
              "icon": {
                "title": "icon",
                "type": "string",
                "widget": { "ui:widget": "image-uploader" }
              },
              "href": {
                "title": "href",
                "type": "string"
              }
            }
          }
        },
        "menu": {
          "title": "Main Menu Item List",
          "type": "array",
          "items": {
            "title": "main menu first level",
            "type": "object",
            "properties": {
              "title": {
                "title": "Text",
                "type": "string"
              },
              "href": {
                "title": "href",
                "type": "string"
              },
              "submenu": {
                "title": "2nd Level Main Menu Item List",
                "type": "array",
                "items": {
                  "title": "Items in second level menu",
                  "type": "object",
                  "properties": {
                    "title": {
                      "title": "Text",
                      "type": "string"
                    },
                    "href": {
                      "title": "href",
                      "type": "string"
                    },
                    "submenuThirdLevel": {
                      "title": "3nd Level Main Menu Item List",
                      "type": "array",
                      "items": {
                        "title": "col",
                        "type": "array",
                        "items": {
                          "title": "Items in third level menu",
                          "type": "object",
                          "properties": {
                            "title": {
                              "title": "Text",
                              "type": "string"
                            },
                            "href": {
                              "title": "href",
                              "type": "string"
                            },
                            "headTitle": {
                              "title": "Is head title?",
                              "type": "boolean",
                              "default": false
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  {
    "name": "BannerGrid",
    "schema": {
      "title": "BannerGrid for Images",
      "description": "BannerGrid for images",
      "type": "object",
      "properties": {
        "row": {
          "title": "Banner List",
          "type": "array",
          "items": {
            "title": "Banner row",
            "type": "object",
            "properties": {
              "column": {
                "title": "banner column",
                "type": "array",
                "items": {
                  "title": "Banner",
                  "type": "object",
                  "properties": {
                    "image": {
                      "title": "Image",
                      "type": "string",
                      "widget": { "ui:widget": "media-gallery" }
                    },
                    "name": {
                      "title": "Name",
                      "type": "string"
                    },
                    "url": {
                      "title": "Link",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  {
    "name": "RegionHeaderBar",
    "schema": {
      "title": "RegionBar for Header",
      "description": "RegionBar for Header",
      "type": "object",
      "properties": {
        "topbar": {
          "title": "Top bar Item List",
          "type": "array",
          "items": {
            "title": "Top Item",
            "type": "object",
            "properties": {
              "link": {
                "title": "link",
                "type": "string"
              },
              "ico": {
                "title": "ico",
                "type": "string",
                "widget": { "ui:widget": "media-gallery" }
              },
              "infoText": {
                "title": "text",
                "type": "array",
                "items": {
                  "title": "text content",
                  "type": "object",
                  "properties": {
                    "text": {
                      "title": "link",
                      "type": "string"
                    },
                    "color": {
                      "title": "Text Color",
                      "type": "string",
                      "enumNames": [
                        "Normal",
                        "Highlight"
                      ],
                      "enum": [
                        "normal",
                        "highlight"
                      ],
                      "default": "normal"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
]
